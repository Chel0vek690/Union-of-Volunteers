    <Style x:Key="RedButtons">
        <Setter Property="Button.Background" Value="#E31E24" />
        <Setter Property="Button.Height" Value="120" />
        <Setter Property="Button.FontSize" Value="40" />
        <Setter Property="Button.FontFamily" Value="pack://application:,,,/;component/Resources/Fonts/#dinpro_medium"/>
        <Setter Property="Button.Foreground" Value="#FFFFFF" />
        <Setter Property="Button.Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F45952" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BlueButtons">
        <Setter Property="Button.Background" Value="#2683F1" />
        <Setter Property="Button.Height" Value="120" />
        <Setter Property="Button.FontSize" Value="40" />
        <Setter Property="Button.FontFamily" Value="pack://application:,,,/;component/Resources/Fonts/#dinpro_medium"/>
        <Setter Property="Button.Foreground" Value="#FFFFFF" />
        <Setter Property="Button.Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF308CF1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CancelButton">
        <Setter Property="Button.Background" Value="#FFFFFF" />
        <Setter Property="Button.Width" Value="212" />
        <Setter Property="Button.Height" Value="80" />
        <Setter Property="Button.FontFamily" Value="pack://application:,,,/SberQ;component/Resourses/Fonts/#dinpro_medium"/>
        <Setter Property="Button.FontSize" Value="24" />
        <Setter Property="Button.Foreground" Value="#E31E24" />
        <Setter Property="Button.BorderBrush" Value="#FFFFFFFF" />
        <Setter Property="Button.Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="3" BorderBrush="#E31E24" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#19F45952" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Button>">
        <Setter Property="Button.Background" Value="#12529E" />
    </Style>





</ResourceDictionary>